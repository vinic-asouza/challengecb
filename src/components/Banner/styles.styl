.banner
    margin-bottom: 25px;

    &__list
        max-width: 1920px;
        margin: 0 auto;
        position: relative;

    &__image
        width: 100%;

    .slick-dots
        position: absolute;
        bottom: 40px;
        z-index: 9;

        li
            width: 10px;
            height: 10px;
            margin: 0px 6px;
            padding: 0;

            &.slick-active
                button
                    &:before
                        color: #F8475F;
                        opacity: 1;

        button
            width: 10px;
            height: 10px;

            &:before
                width: 10px;
                height: 10px;
                color: #BDBDBD;
                font-size: 10px;
                opacity: 1;
